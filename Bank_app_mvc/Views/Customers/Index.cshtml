@model Bank_app_mvc.Models.Customer

@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm profile-card">
                <div class="card-body text-center py-5">
                    <!-- Profile Icon -->
                    <div class="profile-icon bg-danger text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4">
                        <i class="bi bi-person-fill fs-1"></i>
                    </div>

                    <!-- Customer Name -->
                    <h3 class="fw-bold text-danger mb-1">@Model.FirstName @Model.LastName</h3>
                    <p class="text-muted mb-4">Customer ID: @Model.CustomerId</p>

                    <hr class="my-4">

                    <!-- Customer Details -->
                    <div class="text-start px-3">
                        <div class="mb-3">
                            <i class="bi bi-telephone text-danger me-2"></i>
                            <strong>Phone:</strong>
                            <span class="text-muted ms-2">@Model.Phone</span>
                        </div>

                        <div class="mb-3">
                            <i class="bi bi-geo-alt text-danger me-2"></i>
                            <strong>Address:</strong>
                            <span class="text-muted ms-2">@Model.Address</span>
                        </div>

                        <div class="mb-3">
                            <i class="bi bi-person-vcard text-danger me-2"></i>
                            <strong>NIN:</strong>
                            <span class="text-muted ms-2">@Model.NIN</span>
                        </div>

                        <div class="mb-3">
                            <i class="bi bi-envelope text-danger me-2"></i>
                            <strong>User ID:</strong>
                            <span class="text-muted ms-2">@Model.User?.Id</span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Actions -->
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-danger px-4 me-2">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                        <a asp-controller="Account" asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-wallet2"></i> View Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
