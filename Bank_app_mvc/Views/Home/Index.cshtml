@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero bg-danger text-white py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">Welcome to Peak Bank</h1>
        <p class="lead mt-3">Smart. Secure. Seamless Banking — Anytime, Anywhere.</p>
        <a href="/Account/Create" class="btn btn-light btn-lg mt-4 fw-semibold px-4">Open an Account</a>
    </div>
</section>

<!-- Features Section -->
<section class="features py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm p-4 h-100">
                    <div class="mb-3 text-danger fs-2">
                        <i class="bi bi-wallet2"></i>
                    </div>
                    <h5 class="fw-bold">Instant Transactions</h5>
                    <p class="text-muted">Send and receive money in seconds. Fast, secure, and reliable payments anytime.</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm p-4 h-100">
                    <div class="mb-3 text-danger fs-2">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                    <h5 class="fw-bold">Safe & Secure</h5>
                    <p class="text-muted">Your funds and data are protected with multi-layer encryption and authentication.</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm p-4 h-100">
                    <div class="mb-3 text-danger fs-2">
                        <i class="bi bi-phone"></i>
                    </div>
                    <h5 class="fw-bold">24/7 Access</h5>
                    <p class="text-muted">Manage your account anytime, anywhere — straight from your mobile or desktop.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="cta bg-danger text-white py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-3">Start Banking Smarter Today</h2>
        <p class="mb-4">Join thousands of users enjoying fast, secure, and transparent banking.</p>
        <a href="/Transaction/Create" class="btn btn-light btn-lg fw-semibold px-4">Make a Transaction</a>
    </div>
</section>

<!-- Footer -->
<footer class="py-4 bg-white border-top">
    <div class="container text-center text-muted">
        <p class="mb-0">&copy; @DateTime.Now.Year Peak Bank. All rights reserved.</p>
    </div>
</footer>
